<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trip Name" />
        <EditText
            android:id="@+id/tripNameField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Name"
            android:inputType="text" />
<!--
        <EditText
            android:id="@+id/startPointField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="Start Point"
            android:inputType="text" /> -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Point"
            android:layout_marginTop="20dp"/>

        <fragment
            android:id="@+id/place_autocomplete_fragment_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            >
        </fragment>

     <!--   <EditText
            android:id="@+id/endPointField"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:hint="End Point"
            android:inputType="text" /> -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="End Point" />

        <fragment
            android:id="@+id/place_autocomplete_fragment_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
            >
        </fragment>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dateField"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:hint="Date"
                android:inputType="text"
                android:focusable="false"/>

            <EditText
                android:id="@+id/timeField"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:focusable="false"
                android:hint="Time"
                android:inputType="text" />
        </LinearLayout>


        <CheckBox
            android:id="@+id/repeatCheckbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repeat Trip"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"/>

        <RadioGroup
            android:id="@+id/notesRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/oneDirectionRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="One Direction"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/roundTripRadioButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Round Trip" />
        </RadioGroup>



        <TextView
            android:id="@+id/notesTextView"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:text="Notes" />

        <Button
            android:id="@+id/addNoteBtn"

            android:layout_width="63dp"
            android:layout_height="wrap_content"
            android:text="+" />



        <Button
            android:id="@+id/addTripBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="70dp"
            android:paddingRight="70dp"
            android:text="Add Trip"
            />
    </LinearLayout>
</ScrollView>
