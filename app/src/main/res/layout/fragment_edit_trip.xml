<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.egh.tripplanner.fragments.EditTripFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_trip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:elevation="100dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/card_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp">

                    <EditText
                        android:id="@+id/trip_name"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorPrimaryDark"
                        android:text="Trip Name"
                        android:inputType="text"
                        android:textSize="20sp" />

                    <!--<TextView
                        android:id="@+id/trip_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Trip Name"
                        android:textSize="20sp"/>-->

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="From: "
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"/>

                    <fragment
                        android:id="@+id/place_autocomplete_fragment_start"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        >
                    </fragment>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="To: "
                        android:paddingTop="10dp"
                        android:paddingBottom="5dp"/>
                    <fragment
                        android:id="@+id/place_autocomplete_fragment_end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
                        >
                    </fragment>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:paddingBottom="10dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/datetime"/>

                        <EditText
                            android:id="@+id/trip_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:focusable="false"
                            android:hint="Date"
                            android:inputType="text"
                            android:paddingBottom="5dp"
                            android:paddingTop="10dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:paddingBottom="5dp"
                            android:paddingTop="10dp"
                            android:src="@drawable/datetime"/>

                        <EditText
                            android:id="@+id/trip_time"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:paddingBottom="5dp"
                            android:backgroundTint="@color/colorPrimaryDark"
                            android:focusable="false"
                            android:hint="Time"
                            android:inputType="text" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <CheckBox
                        android:id="@+id/repeatCheckbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Repeat Trip"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />
                    <RadioGroup
                        android:id="@+id/directionsRadioGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/oneDirectionRadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="One Direction"
                            android:checked="true"

                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp"/>

                        <RadioButton
                            android:id="@+id/roundTripRadioButton"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Round Trip"
                            android:layout_marginBottom="15dp"
                            android:layout_marginTop="10dp"/>
                    </RadioGroup>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <CheckBox
                        android:id="@+id/doneCheckbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Done"
                        android:layout_marginBottom="15dp"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"
            android:elevation="100dp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/card_radius">

            <android.support.v7.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Notes" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/notesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

            </android.support.v7.widget.LinearLayoutCompat>

            <Button
                android:id="@+id/addNoteBtn"

                android:layout_width="40dp"
                android:layout_height="36dp"
                android:background="@drawable/ic_add_circle_black_24dp"
                android:text="+" />
        </android.support.v7.widget.CardView>
        <Button
            android:id="@+id/editTrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:layout_marginLeft="@dimen/card_margin"
            android:layout_marginTop="@dimen/card_margin"
            android:layout_marginRight="@dimen/card_margin"/>
    </LinearLayout>

</ScrollView>
